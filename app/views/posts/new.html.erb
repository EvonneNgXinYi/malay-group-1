<%= t "posts.add" %>
<%= form_for :post, url: posts_path do |f| %>
  <%= render "shared/error_postmessages" %>

  <%= f.label :title %>
  <%= f.text_field :title, class: "form-control" %>
  <%= f.label :body %>
  <%= f.text_area :body, class: "form-control" %>
  <%= f.submit t("posts.submit"), class: "btn btn-primary" %>
<% end %>
