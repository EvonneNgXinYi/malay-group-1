<%= form_for :conversation, url: :conversations, html: { class: "" } do |f| %>
  <div class="form-group">
    <%= f.label :recipients %>
    <%= f.select(:recipients, User.all.collect {|p| [ p.name, p.id ] }, {}, { multiple: true , class: "form-control" })%>
  </div>

  <div class="form-group">
    <%= f.label :subject %>
    <%= f.text_field :subject, placeholder: t(".placeholder1"), class: "form-control" %>
  </div>

  <div class="form-group">
    <%= f.label :message %>
    <%= f.text_area :body, class: "form-control",placeholder: t(".placeholder2"), rows: 4  %>
  </div>

  <%= f.submit t(".send"), class: "btn btn-success" %>
<% end %>
